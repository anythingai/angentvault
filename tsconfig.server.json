{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./dist/server",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/types": ["./types/index"]
    }
  },
  "include": [
    "src/server/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/app/**/*",
    "src/components/**/*",
    "src/pages/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    ".next",
    "cypress"
  ]
} 